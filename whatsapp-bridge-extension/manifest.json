{
  "manifest_version": 3,
  "name": "WhatsApp Analytics Bridge",
  "version": "1.0",
  "description": "Bridge between analytics_for_problem.html and WhatsApp Web",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "file:///*"
  ],
  "background": {
    "service_worker": "bridge_background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["whatsapp_bridge.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["file:///*analytics_for_problem.html*", "http://*/analytics_for_problem.html*", "https://*/analytics_for_problem.html*"],
      "js": ["analytics_bridge.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "bridge_popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
